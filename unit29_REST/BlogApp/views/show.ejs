<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <img class="ui centered rounded image" src="<%= blog.image %>">
        <div class="content">
            <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
                <p><%- blog.body %></p>
        </div>
    </div>
    <a class="ui orange basic button" href="/blogs/<%=blog._id%>/edit">Edit</a>
    <form class="ui form" id="deleteForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red basic button" type="submit">Delete</button>
    </form>
</div>
<% include partials/footer %>